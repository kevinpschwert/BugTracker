@model BugTracker.Models.EmailModel

@using (Html.BeginForm("Contact", "Home", null, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">

        <div class="row marginbot-80">
            <div class="col-md-8 col-md-offset-2">
                <div id="sendmessage">Your message has been sent. Thank you!</div>
                <div id="errormessage"></div>
                <form action="" method="post" role="form" class="contactForm">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "Your Name" })
                            @Html.ValidationMessageFor(m => m.FromName)
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FromEmail, new
                           {
                               @class = "form-control",
                               placeholder = "Your Email"
                           })
                            @Html.ValidationMessageFor(m => m.FromEmail)
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Subject, new
                           {
                               @class = "form-control",
                               placeholder = "Subject"
                           })
                            @Html.ValidationMessageFor(m => m.Subject)
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Body, new
                           {
                               @class = "form-control",
                               placeholder = "Body",
                               rows = "5"

                           })
                            @Html.ValidationMessageFor(m => m.Body)
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <br />
