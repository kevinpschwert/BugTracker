                                    <!-- Conversations are loaded here -->
                                    <div class="direct-chat-messages">
                                        <!-- Message. Default to the left -->
                                        @{
                                            var user = HttpContext.Current.User.Identity.GetUserId();
                                            var bob = Model.Chat.Where(u => u.AssignToUserId == user || u.OwnerUserId == user).ToList();
                                            var allMessages = new List<Chat>();
                                            allMessages.AddRange(bob);
                                            
                                            var order = allMessages.OrderByDescending(x => x.Created);
                                        }

                                        @foreach (var message in order)
                                        {
                                            if (message.OwnerUserId == user)
                                            {
                                                <div class="direct-chat-msg">
